{
  "$schema": "https://schema.railpack.com",
  "steps": {
    "install": {
      "commands": [
        {
          "cmd": "cd website && npm install"
        }
      ]
    },
    "build": {
      "inputs": ["install"],
      "commands": [
        {
          "cmd": "cd website && npm run build"
        }
      ],
      "deployOutputs": ["website/dist/**"]
    }
  },
  "deploy": {
    "startCommand": "cd website && npm run preview -- --port $PORT --host 0.0.0.0"
  }
}
