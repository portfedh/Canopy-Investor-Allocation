{
  "$schema": "https://schema.railpack.com",
  "provider": "railway",
  "steps": {
    "install": {
      "commands": ["cd website && npm install"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["cd website && npm run build"],
      "deployOutputs": [
        {
          "include": ["website/dist/**"]
        }
      ]
    }
  },
  "deploy": {
    "startCommand": "cd website && npm run preview -- --port $PORT --host 0.0.0.0"
  }
}
